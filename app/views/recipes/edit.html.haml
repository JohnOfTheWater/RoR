= link_to("<< Back to Recipes List", {:action => 'index'}, :class => 'back_button')
#update_wrap
  %h2 Update Recipe
  = simple_form_for(@recipe) do |f|
    %h2#update_name Recipe Name
    = f.text_field(:recipe_name, as: :string, autofocus: "true")
    %h2#update_desc Description
    = f.text_area(:description, as: :text)
    %h2#update_ing Ingredients
    = f.text_area(:ingredients, as: :text)
    %h2#update_prep Preparation
    = f.text_area(:preparation)
    %h2#update_time Ready In
    = f.text_field(:ready_in, placeholder: "30 min")
    %h2#update_servings Servings
    = f.text_field(:servings)
    %h2#update_tags Tags
    = f.text_field(:tags)
    %h2#update_img Image
    = f.file_field(:image)
    #creator= f.hidden_field(:user, :value => current_user.username)
    #new_button
      = submit_tag("Update Recipe!")
