#background_create
#new_recipe_message Create a New Recipe
#new_recipe_wrap
  = form_for(:recipe, html:  {:multipart => true}, :url => {:action => 'create'}) do |f|
    %table{:summary => "Recipe form field", :id => 'summary'}
      %h2#new_recipe_name
        Recipe Name
        = f.text_field(:recipe_name, placeholder: "Recipe Name", maxlength: 100, autofocus: "true")
      %h2#new_recipe_desc
        Description
        = f.text_area(:description, placeholder: "a brief description of this recipe", maxlength: 82)
      %h2#new_recipe_ingr
        Ingredients
        = f.text_area(:ingredients, placeholder: "- stuffing with more stuffing  - stuffing with more stuffing  - stuffing with more stuffing  ", maxlength: 1500)
      %h2#new_recipe_prep
        Preparation
        = f.text_area(:preparation, maxlength: 2000, placeholder: "Heat vegetable oil in a large skillet over medium heat. Pan-fry chicken until golden brown on both sides, 5 to 7 minutes; transfer to a plate. Melt butter in the same skillet; cook and stir remaining 2 tablespoons flour in butter for 5 minutes, then add chicken broth and lemon juice. Simmer until thickened, about 10 minutes. Return chicken to the skillet. Continue simmering until chicken is no longer pink in the center, about 15 more minutes... basically peal it, eat it!", maxlength: 2000)
      %h2#new_recipe_time
        Ready In
        = f.text_field(:ready_in, maxlength: 30, placeholder: "30 min")
      %h2#new_recipe_servings
        Servings
        = f.text_field(:servings, maxlength: 30, placeholder: "2")
      %h2#new_recipe_tags
        Tags
        = f.text_field(:tags, maxlength: 30, placeholder: "vegetarian, easy, two pots")
      %h2#new_recipe_image
        Image
        = f.file_field(:image)
      = f.hidden_field(:user, :value => current_user.username)
    #new_recipe_button
      = submit_tag("Add Recipe!")
